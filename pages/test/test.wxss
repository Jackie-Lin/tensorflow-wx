.title{
  position: fixed;
  z-index: 1;
  font-size: 45rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 20px;
  margin-left: 38%;
  color: #ffffff;
}

.bg{
  width: 100%;
  height: 100vh;
}

.bg > .bg-top{
  width: 100%;
  height: 30vh;
  background: #31b44f;
}

.bg > .bg-bottom{
  width: 100%;
  height: 70vh;
  background: #e5f7dd;
}

.boxs{
  position: fixed;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.test-box{
  display: flex;
