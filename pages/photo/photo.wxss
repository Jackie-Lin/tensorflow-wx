.title{
  position: fixed;
  z-index: 11;
  width: 100vw;
  font-size: 45rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 100rpx;
}

.show-img {
  position: absolute;
  margin-top: 0;
  z-index: 10;
  width: 100vw;
}

.show-img > image {
  width: 100%;
}

.canvas{
  position: absolute;
  z-index: -1;
  margin-top: -1000px;
}

.car-box{
  position: fixed;
  z-index: 99;
  bottom: 0;
  width: 100vw;
  height: 40vh;
  border-radius: 10px 10px 0 0;
  box-shadow: 0 -1px 8px rgba(0,0,0,.1);
  background: #ffffff;
  bottom: -320px;
}

.result-title{
  font-size: 40rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
  font-weight: 600;
  color: #222222;
}

.hint{
  margin-left: 30rpx;
  margin-bottom: 60rpx;
  color: #d6d6d6;
}

.result-box{
  display: flex;
  width: 100vw;
  justify-content: space-around;
}

.result-card {
  display: flex;
  flex-direction:column;
  align-items: center;
}

.result-card > .img{
  width: 120rpx;
  height: 120rpx;
}

.result-card > .img > image{
  width: 100%;
  height: 100%;
}

.probability {
  font-size: 40rpx;
  margin-top: 10px;
  margin-bottom: 2px;
  color: #3e4851;
}

.class-label{
  color: #cdcdcd;
}
