page{
  background: #ffffff;
}

.title{
  font-size: 45rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 20px;
}

.card-box{
  width: 90%;
  height: 100px;
  border-radius: 30rpx;
  display: flex;
  margin: 60rpx auto;
}

.color-1{
  background: #016599;
}

.color-2{
  background: #b43953;
}

.color-3{
  background: #825349;
}

.color-4{
  background: #7e8ca7;
}

.card-box > .img{
  width: 70px;
  height: 70px;
  margin: auto;
  padding-left: 10px;
}

.card-box > .img >image {
  width: 100%;
  height: 100%;
}

.card-text{
  color:#ffffff;
  width: 60%;
  margin: auto;
}

.card-text > .card-title{
  margin-bottom: 5px;
}

.card-text > .card-body{
  width: 95%;
  font-size: 12px;
  line-height: 16px;
}

.title-2{
  margin-top: 10px;
  margin-left: 5%;
}

.body-2 {
  font-size: 12px;
  line-height: 15px;
  margin: 15px 0;
  align-items: center;
}

.body-2 > image {
  width: 10px;
  height: 10px;
  margin-left: 5%;
}

.body-2 > view {
  line-height: 20px;
}

.line-1{
  height: 8px;
}